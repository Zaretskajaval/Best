<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VetInformation">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarVetInformation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFD6EF"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/backarrow"
        app:subtitleTextColor="@color/white"
        app:title="Ветеринарная информация"
        android:textSize="16sp"
        android:textStyle="bold"
        app:titleMargin="10dp"
        app:titleMarginStart="10dp"
        app:titleTextColor="@color/black" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="112dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="16dp"
        android:text="Тут будет информация о графике вакцинации и дегельминтизации, а может что-то еще (например ссылка куда-то может на что-то полезное)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>